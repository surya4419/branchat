# Environment
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/subchat-mvp
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/subchat-mvp

# Elastic Search
ELASTIC_URL=http://localhost:9200
# For Elastic Cloud: https://your-deployment.es.region.cloud.es.io:9243
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your-elastic-password
# Alternative: Use API key instead of username/password
# ELASTIC_API_KEY=your-elastic-api-key

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_EMBEDDING_MODEL=text-embedding-004

# AI Settings
MAX_TOKENS=2000
TEMPERATURE=0.7

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Guest Mode
ALLOW_GUEST=true

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Memory Settings
MEMORY_TOP_K=5
MEMORY_SIMILARITY_THRESHOLD=0.7

# Admin (optional)
ADMIN_API_KEY=your-admin-api-key